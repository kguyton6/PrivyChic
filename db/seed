
 Create Table business (
business_id serial primary key,
user_id integer references priv_users(user_id),
business_name text NOT NULL,
phone_number text NOT NULL,
streetAddress text NOT NULL,
state text NOT NULL NOT NULL,
zipcode integer NOT NULL,
unique (user_id, business_id))


create table priv_users (
user_id serial primary key
first_name text,
last_name text,
phone text,
email text,
password text,
unique(email, user_id))



create table services(
service_id serial primary key,
business_id integer references business(business_id),
service_name text,
type text,
price text,
duration text, 
description text,
unique(service_id, business_id))

create table profile (
id serial primary key,
user_id integer references priv_users(user_id),
full_name text,
profession text,
about text,
picture text,
unique(user_id))


create table calendar (
id serial primary key,
user_id integer references priv_users(user_id),
calendar_month integer,
calendar_day INTEGER,
calendar_year INTEGER,
day_name text,
month_name text,
time text
)

create table business_hours (
business_id integer references business(business_id),
monday text,
tuesday text,
wednesday text,
thursday text,
friday text,
saturday text,
sunday text)

create table bookings(
booking_id serial primary key,
service_id integer references services(service_id),
business_id integer references business(business_id),
client_id integer references priv_users(user_id))
